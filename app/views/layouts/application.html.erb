<!DOCTYPE html>
<html>
  <head>
    <title>TechDen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= yield %>

    <footer>
      <% flash.each do |type, message| %>
        <div class="<%= flash_class(type) %>">
          <%= message %>
        </div>
      <% end %>
    </footer>
    
  </body>
</html>
